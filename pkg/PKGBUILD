# Maintainer: Jonas Jaguar <jonasjaguar@jagudev.net>
pkgname=jagudev-music
pkgver=1.0
pkgrel=1
pkgdesc="The default music player for JaguOS"
arch=('x86_64')
url="https://jagudev.net"
license=('GPL3')
depends=(qt5-base qt5-multimedia)
makedepends=(gcc make)
options=()
source=("https://github.com/jonasjaguar/Music/archive/$pkgver.tar.gz")   
md5sums=('53c5b6afba50400042665b5ca2a5b02d')
validpgpkeys=()


build() {
	cd "$pkgname-$pkgver/Music-$pkgver/Music"
	qmake ./Music.pro -spec linux-g++ && /usr/bin/make qmake_all
	make
}

package() {
	cd "$pkgname-$pkgver/Music-$pkgver/Music"
	make INSTALL_ROOT="$pkgdir" install
}
